# Database - PostgreSQL Local (Docker Compose default) o Supabase
# Si defines DATABASE_URL, se usa esa. Si no, se usa la DB local del compose
# DATABASE_URL=postgresql://postgres.xxx:password@aws-1-us-east-2.pooler.supabase.com:5432/postgres
POSTGRES_DB=tickets
POSTGRES_USER=tickets
POSTGRES_PASSWORD=tickets

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO (Object Storage)
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio12345

# Secrets (CAMBIAR EN PRODUCCIÃ“N)
JWT_SECRET=changeme-jwt-secret-very-long-and-secure
QR_SECRET=changeme-qr-secret-also-very-secure

# Mercado Pago (opcional)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_WEBHOOK_SECRET=

# Email (opcional - SendGrid)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@crodify.com

# App config
APP_ENV=development
APP_DEBUG=True
APP_BASE_URL=http://localhost:8000
LOG_LEVEL=INFO

# CORS (agregar tus dominios)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
